# ==============================================================================
# Agricultural SRI Pipeline - Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git (it's gitignored)
# ==============================================================================

# Airflow Configuration
# ------------------------------------------------------------------------------
AIRFLOW_UID=50000
AIRFLOW_IMAGE_NAME=apache/airflow:2.7.3-python3.10

# Airflow Admin User
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=change_this_password_123
AIRFLOW_ADMIN_EMAIL=admin@agcompany.com

# Email/SMTP Configuration (for sending reports)
# ------------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_MAIL_FROM=agricultural-alerts@agcompany.com
SMTP_STARTTLS=True
SMTP_SSL=False

# API Keys
# ------------------------------------------------------------------------------

# USDA NASS QuickStats API
# Get your key at: https://quickstats.nass.usda.gov/api
USDA_API_KEY=2EEF90B1-825E-322B-8B27-098A9C92D575

# Visual Crossing Weather API
# Sign up at: https://www.visualcrossing.com/sign-up
VISUAL_CROSSING_API_KEY=YOUR_KEY_HERE

# AWS Configuration (for S3 report storage)
# ------------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
S3_BUCKET_NAME=agricultural-risk-reports

# Database Configuration
# ------------------------------------------------------------------------------
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Stakeholder Email List (comma-separated)
# ------------------------------------------------------------------------------
STAKEHOLDER_EMAILS=traders@market.com,policy@usda.gov,risk@agcompany.com

# Optional: Slack Webhook for Notifications
# ------------------------------------------------------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Report Distribution URLs
# ------------------------------------------------------------------------------
REPORT_BASE_URL=https://ag-risk-reports.com
API_BASE_URL=https://api.ag-risk-reports.com

# Feature Flags
# ------------------------------------------------------------------------------
ENABLE_EMAIL_ALERTS=true
ENABLE_S3_UPLOAD=true
ENABLE_API_UPDATE=true
ENABLE_SLACK_NOTIFICATIONS=false

# Testing/Development
# ------------------------------------------------------------------------------
ENVIRONMENT=production  # Options: development, staging, production
DEBUG_MODE=false
